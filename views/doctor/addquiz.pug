doctype html
html
    include header
    include nav

    body
        br
        br
        .container
            .row
                .col-md-2
                .col-md-8.form(role='form',id='quiz')
                    .form-group
                        label(for='qst') Quiz Question:
                        input#qst.form-control(type='string')
                    .form-group
                        label(for='a1') Answer 1:
                        input#a1.form-control(type='string')
                    .form-group
                        label(for='a2') Answer 2:
                        input#a2.form-control(type='string')
                    .form-group
                        label(for='a3') Answer 3:
                        input#a3.form-control(type='string')
                    .form-group
                        label(for='a4') Answer 4:
                        input#a4.form-control(type='string')
                    .form-group
                        label(for='ca') Correct Answer:
                        select(id='ca')
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4


                    button.success.btn.btn-default(type='submit') Submit

    include footer