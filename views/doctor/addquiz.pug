doctype html
html
    include header
    include nav

    body
        br
        br
        .container
            .row
                .col-md-2
                .col-md-8
                    if messages
                        .row
                            .col-md-4
                            .text-success
                                strong #{messages}
                    form(role='form',id='quiz',method='post',action='/doctor/addquiz',class='col-md-12')
                        .form-group
                            label(for='qst') Quiz Question:
                            input#qst.form-control(type='string',name='qst')
                        .form-group
                            label(for='a1') Answer 1:
                            input#a1.form-control(type='string',name='a1')
                        .form-group
                            label(for='a2') Answer 2:
                            input#a2.form-control(type='string',name='a2')
                        .form-group
                            label(for='a3') Answer 3:
                            input#a3.form-control(type='string',name='a3')
                        .form-group
                            label(for='a4') Answer 4:
                            input#a4.form-control(type='string',name='a4')
                        .form-group
                            label(for='ca') Correct Answer:
                            select(id='ca',name='ca')
                                option(value='1') 1
                                option(value='2') 2
                                option(value='3') 3
                                option(value='4') 4

                        div
                            button.btn.btn-primary(type="submit") Submit

    include footer