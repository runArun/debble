    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light

            #navbarNavDropdown.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href="/customer/index")
                            | Home
                            span.sr-only (current)


                    li.nav-item.dropdown
                        a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href="#", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                            | Profile
                        .dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                            a.dropdown-item(href="/customer/info") Info
                            a.dropdown-item(href="#") Events
                            a.dropdown-item(href="#") About
                            a.dropdown-item(href="#") Contact
                            a.dropdown-item(href="#") Emergency



                    li.nav-item.dropdown
                        a#navbarDropdownMenuLink.nav-link.dropdown-toggle(href="#", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false")
                            | Available Sources
                        .dropdown-menu(aria-labelledby="navbarDropdownMenuLink")
                            a.dropdown-item(href="/customer/map") Available Hospitals
                            a.dropdown-item(href="#") Available Doctors

                    li.nav-item
                        a.nav-link(href="/customer/quiz") OnlineQuiz


                ul.nav.navbar-nav.navbar-right
                    li
                        a(href="/customer/shopping-cart/")
                            i.fa.fa-shopping-cart(aria-hidden="true")
                            |  Shopping Cart
                            //span.badge ＃{session.cart.totalQty}



            if login
            button.btn.btn-outline-success.my-2.my-sm-0(type="submit" name='logout')
                a(href='/user/logout') Log out
        br
        br


        .container
            .row
                .col-md-6.col-md-offset-4
                    form
                        .form-group
                        label(for="exampleInputPassword1") Change Password
                        input#exampleInputPassword1.form-control(type="password", placeholder="Password")
                        .form-group
                        label(for="exampleSelect1") Example select
                        select#exampleSelect1.form-control
                            option 1
                            option 2
                            option 3
                            option 4
                            option 5

                        .form-group
                        label(for="exampleTextarea") Personal health statement
                        textarea#exampleTextarea.form-control(rows="4")
                        .form-group
                        label(for="exampleInputFile") File input
                        input#exampleInputFile.form-control-file(type="file", aria-describedby="fileHelp")
                        small#fileHelp.form-text.text-muted
                            | This is some placeholder block-level help text for the above input. It's a bit lighter and easily wraps to a new line.
                        fieldset.form-group
                        legend Radio buttons
                        .form-check
                            label.form-check-label
                                input#optionsRadios1.form-check-input(type="radio", name="optionsRadios", value="option1", checked="")
                                |         Option one is this and that—be sure to include why it's great
                        .form-check
                            label.form-check-label
                                input#optionsRadios2.form-check-input(type="radio", name="optionsRadios", value="option2")
                                |         Option two can be something else and selecting it will deselect option one
                        .form-check.disabled
                            label.form-check-label
                                input#optionsRadios3.form-check-input(type="radio", name="optionsRadios", value="option3", disabled="")
                                |         Option three is disabled
                        .form-check
                        label.form-check-label
                            input.form-check-input(type="checkbox")
                            |       Check me out
                        div
                            button.btn.btn-primary(type="submit") Submit





    footer.container-fluid.bg-light.text-center
        p
            | Health Assistant Made By
            | #{'  '}
            a(href="/user/login") www.health_assistant.com
