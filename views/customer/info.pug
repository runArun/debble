doctype html
html
        include header
        include nav
        body
            .container
                .row
                    .col-md-3
                    .col-md-6
                        form(method='post',action='/customer/info')
                            .form-group
                            label First name:
                            br
                            input#fn.form-control(type='string', name='fn')

                            .form-group
                            label Last name:
                            br
                            input#ln.form-control(type='string', name='ln')

                            .form-group
                            label age:
                            br
                            input#age.form-control(type="number" name="age" min="1" max="100")

                            .form-group
                            label weight (kg):
                            br
                            input#w.form-control(type="number" name="w" min="30" max="300")

                            .form-group
                            label height (cm):
                            br
                            input#h.form-control(type="number" name="h" min="60" max="250")

                            .form-group
                            label phone number:
                            br
                            input#phone.form-control(type="number" name="phone")


                            .form-group
                            input(type='radio', name='gender', value='Male', checked='')
                            |  Male
                            input(type='radio', name='gender', value='Female')
                            |  Female
                            input(type='radio', name='gender', value='Other')
                            |  Other


                            .form-group
                            label blood group:
                            br
                            input#bg.form-control(type='string')


                            .form-group
                            label(for="country") country
                            input#country.form-control(type="string" name="country")

                            .form-group
                            label(for="city") city
                            input#city.form-control(type="string" name="city")


                            .form-group
                            label(for="phs") Personal health statement
                            input#phs.form-control(rows="4")

                            br
                            div
                                button.btn.btn-primary(type="submit") Save
        include footer