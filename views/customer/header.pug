nav.navbar.navbar-default
    .container-fluid
        // Brand and toggle get grouped for better mobile display
        .navbar-header
            button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="/") Medicines Centre

            // Collect the nav links, forms, and other content for toggling
            ul.nav.navbar-nav.navbar-right
                li
                    a(href="/shopping-cart/")
                        i.fa.fa-shopping-cart(aria-hidden="true") Shopping Cart
                        span.badge #{session.cart.totalQty}

                li.dropdown
                    a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
                        i.fa.fa-user(aria-hidden="true") User Management
                        span.caret
                    ul.dropdown-menu
                        if login
                            li
                                a(href="/user/profile") User Account
                            li.divider(role="separator")
                            li
                                a(href="/user/logout") Logout
                        else
                            li
                                a(href="/user/signup") Sign Up
                            li
                                a(href="/user/login") login

