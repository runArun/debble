doctype html
html
    include header
    include nav

    body
        .row
            .col-sm-6.col-md-4.col-md-offset-4.col-sm-offset-3
                if !noMessages
                    #success.alert.alert-success
                        #{successMsg}

    each medicine in medicines
        .row: each product in medicine
            .col-sm-6.col-md-4.text-center
                .thumbnail
                    img(class='img-responsive' src= product.imagePath alt="nmb")
                    .caption
                        h3= product.title
                        p.description= product.description
                        //.clearfix
                        .price.pull-left.text-primary= '$  ' + product.price
                        -var id = product._id;
                        a.btn.btn-success.pull-right(href="/customer/add-to-cart/"+id role='button') Add to Shopping Cart


    include footer