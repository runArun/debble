doctype html
html
    include header
        script(type="text/javascript", src="https://js.stripe.com/v2/")
        script(type="text/javascript", src="https://js.stripe.com/v3/")
        script(type="text/javascript", src="/javascripts/checkout.js")

    include nav

    body
        .container-checkout
            .row
                .col-md-3
                .col-sm-6.col-md-6.col-md-offset-3.col-sm-offset-3
                    .panel.panel-default
                        .panel-heading
                            br

                            h3.panel-title
                                | Payment Details
                            br
                            .checkbox.pull-right
                                label
                                    input(type="checkbox")
                                    |                             Remember
                        .panel-body
                            form#checkout-form(action="/checkout", method="post")
                                .form-group
                                    label(for="cardNumber")
                                        | CARD NUMBER
                                    .input-group
                                        input#cardNumber.form-control(type="text", placeholder="Valid Card Number", required="", autofocus="")
                                        span.input-group-addon
                                            span.glyphicon.glyphicon-lock
                                .form-group
                                    label(for="cardHolder")
                                        | CARD HOLDER
                                    .input-group
                                        input#cardHolder.form-control.input-group(type="text", placeholder="Card Holder", required="", autofocus="", name="name")
                                        span.input-group-addon
                                            span.glyphicon.glyphicon-lock
                                .form-group
                                    label(for="address")
                                        | ADDRESS
                                    .input-group
                                        input#address.form-control.input-group(type="text", placeholder="ADDRESS", required="", autofocus="", name="address")
                                        span.input-group-addon
                                            span.glyphicon.glyphicon-lock
                                .row
                                    .col-xs-7.col-md-7
                                        .form-group
                                            div
                                                label
                                                    | EXPIRY DATE
                                            .col-xs-6.col-lg-6.pl-ziro
                                                input#expiryMonth.form-control(type="text", placeholder="MM", required="")
                                            .col-xs-6.col-lg-6.pl-ziro
                                                input#expiryYear.form-control(type="text", placeholder="YY", required="")
                                    .col-xs-5.col-md-5.pull-right
                                        .form-group
                                            label(for="cvCode")
                                                | CV CODE
                                            input#cvCode.form-control(type="password", placeholder="CV", required="")
                                ul.nav.nav-pills.nav-stacked
                                    li.active
                                        a(href="#")
                                            span.badge.pull-right
                                                span.glyphicon.glyphicon-usd #{total}

                                            | Final Payment
                                br

                                #charge-error.alert.alert-danger(class=noError ? 'hidden' : '')
                                    | #{errMsg}
                                button.btn.btn-success.btn-lg.btn-block(type="submit") Pay
        script(type="text/javascript", src="https://js.stripe.com/v2/")
        script(type="text/javascript", src="https://js.stripe.com/v3/")
        script(type="text/javascript", src="/javascripts/checkout.js")

    include footer